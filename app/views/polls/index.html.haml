%p#notice= notice
%h1 Listing Polls
%table
  %thead
    %tr
      %th Text
      %th{:colspan => "3"}
  %tbody
    - @polls.each do |poll|
      %tr
        %td= poll.text
        %td= link_to 'Show', poll
        %td= link_to 'Edit', edit_poll_path(poll)
        %td= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Poll', new_poll_path
